.wrapper-step2
    .container
        width auto
        max-width 1140px
        margin-right 0px
        .row
            .col-md-12
                .card
                    .card-header
                        color #1564b9
                    .card-body
                        form
                            margin-top 20px
                            color #797978
                            .form-steps
                                &-nav
                                    text-decoration none
                                    list-style none
                                    padding 0px
                                    .steps
                                        position relative
                                        min-width 145px
                                        margin auto
                                        text-align center
                                        .num-circle
                                            pointer-events none
                                            display block
                                            padding-top 20px
                                            padding 20px 12px 0px 12px
                                            font-weight 400
                                            color #1564b9
                                            transition all 0.2s ease-in-out
                                            &::after
                                                content ''
                                                display block
                                                position absolute
                                                width 100%
                                                height 2px
                                                left 85px
                                                top 0px
                                                background #1564b9
                                            .num
                                                color #ffffff 
                                                position absolute
                                                display block
                                                background #1564b9
                                                line-height 20px
                                                text-align center
                                                margin-top -57.5px
                                                left 52%
                                                margin-left -17.5px
                                                width 25px
                                                height 25px
                                                top 45px
                                                border-radius 50%
                                                transition all 0.2s ease-in-out
                                                border 2px solid #1564b9
                            .form-steps-content
                                .form-step
                                    .row
                                        .col-md-3
                                            .control-label
                                                font-size 12px
                                            .control-label::after
                                                content '*'
                                                color red
                                            .form-control
                                                font-size 12px
                                    .row
                                        .col-12
                                            h5
                                                color #1564b9
                                                font-weight 300
