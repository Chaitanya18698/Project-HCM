.num-cir
    pointer-events none
    display block
    padding-top 20px
    padding 20px 12px 0px 12px
    font-weight 400
    color #1564b9 !important
    transition all 0.2s ease-in-out
    .num
        color #ffffff !important
        position absolute
        display block
        background #1564b9
        line-height 20px
        text-align center
        margin-top -57.5px
        left 52%
