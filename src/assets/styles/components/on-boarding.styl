        border 2px solid #1564b9

.hide
    display none
.active
    display block
.radio
    position relative
    font-size 13px
    cursor pointer
.radio::after
    display block
    position absolute
    content ''
    border-radius 100%
    height 8px
    width 8px
    bottom 5px
    left -18px
    margin auto
    background #3a628c
    opacity 0
    transition all 0.25s linear
    -webkit-transition all 0.25s linear
[type="radio"]:checked + label:after
    opacity 1
        
.radio::before
    content ''
    display block
    position absolute
    border 1px solid #3a628c
    border-radius 100%
    height 18px
    width 18px
    z-index 5
    bottom 0px
    left -23px
    transition border 0.25s linear
    transition border 0.25s linear


input[type='radio']
    display none
input[id='status']
    position absolute
    top 35px 
input[id='single']
    position absolute
    bottom 28px 
    left 90px 
input[id='male']
    position absolute
    top 35px 
input[id='female']
    position absolute
    bottom 13px 
    left 90px


