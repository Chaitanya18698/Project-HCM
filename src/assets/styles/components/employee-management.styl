        .row
            .col-lg-5
                .card
                    min-height 200px
                    .card-body
                        .card-title
                            color #6c757d
                            font-size 24px
                        .card-menu
                            list-style none
                            margin 0px
                            padding 0px
                            .card-list-item
                                padding-bottom 10px
                                .card-link
                                    color #1564b9
                                    font-size 14px
