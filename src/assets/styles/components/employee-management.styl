.row
    .col-lg-5
        .card
            color #3a628c
            .card-header
                background white
                padding 10px
                .card-icon
                    font-size 24px
                    float left
                .card-button
                   position absolute
                   top 21px
                   right 10px
                   border 1px solid #000
                   border-radius 50%
                   width 20px
                   height 20px
                   font-size 12px
                   text-align center
                   line-height 17px
            .card-body
                .card-list-date
                    display flex
                    flex-direction column
                    align-items center
                    justify-content center
                    width 4rem
                    height 4rem
                    border-right 1px solid #ddd
                .card-list-info
                    display flex
                    border-top 1px solid #ddd
                    padding 5px 
                    align-items center
                    &:first-child
                        border none
                    .card-profile-details
                        width calc(100% - 78px)
                        padding-left 0.6rem

                
.no-padding
    padding 0px
                        






.card
    box-shadow 1px 2px 4px #565555
.card:hover
    cursor pointer


                    
                    