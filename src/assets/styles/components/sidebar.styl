.sidebar
    width 230px
    height calc(100% - 56px)
    border-right 1px solid grey
    box-shadow 1px 2px 2px grey
    overflow auto
    background-color whitesmoke
    z-index 1040
    .sidebar-menu
        list-style none
        padding 0px
        margin 0px
        .sidebar-menu-item
            &-link
                display block
                padding 10px
                color #797978
                cursor pointer
                border-left 4px solid transparent
                .icon
                    color #4671a7
                &:hover
                    text-decoration none
                    background white
                    border-left-color #4671a7
                    color #3a628c
            .sub-menu
                padding 0px
                color #797978
                display none
                list-style none
                &-item
                    &-link
                        padding 5px 5px 5px 30px
                        cursor pointer
                        display block
                        border-left 4px solid transparent
                        &:hover
                          background white
                          border-left-color #4671a7
                          color #3a628c

.sidebar
  &::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 1px rgba(0,0,0,0.3)
    background-color #F5F5F5
  &::-webkit-scrollbar
    width 2px
    background-color #F5F5F5
  &::-webkit-scrollbar-thumb
    background-color #9cbbe2